# Exemple de configuration Nginx pour Plesk (à adapter dans Plesk > Apache & Nginx Settings > Additional nginx directives)
server {
    listen 80;
    server_name cercle-parisien.com www.cercle-parisien.com;

    # Servir frontend statique
    location / {
        root /var/www/vhosts/cercle-parisien.com/httpdocs;
        index index.html;
        try_files $uri $uri/ /index.html;  # Pour SPA si besoin
    }

    # Proxy API vers backend Node (port 3000)
    location /api/ {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # Proxy webhook Stripe
    location /webhook {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # Sécurité : Bloquer accès à dossiers sensibles
    location ~ /\. {
        deny all;
    }

    # Logs
    access_log /var/www/vhosts/cercle-parisien.com/logs/access.log;
    error_log /var/www
